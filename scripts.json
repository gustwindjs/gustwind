{
  "allow": ["env", "read", "write", "net", "run"],
  "env": {
    "NO_COLOR": 1
  },
  "scripts": {
    "develop": {
      "cmd": "deno run --no-check --unstable src/serve.ts",
      "watch": true
    },
    "build": {
      "cmd": "deno run --no-check --unstable src/build.ts"
    },
    "watch:build": {
      "cmd": "deno run --no-check --unstable src/build.ts",
      "watch": true
    },
    "compileGustwindScripts": {
      "cmd": "deno run --unstable compileGustwindScripts.ts"
    }
  }
}
