{
  "allow": ["env", "read", "write", "net", "run"],
  "env": {
    "NO_COLOR": 1
  },
  "scripts": {
    "test": "deno test",
    "watch:test": "deno test --watch",
    "start": {
      "cmd": "deno run --no-check --unstable ./cli.ts -d",
      "watch": true
    },
    "build": {
      "cmd": "deno run --no-check --unstable ./cli.ts -b"
    },
    "build:breezewind-for-npm": {
      "cmd": "deno run -A build_breeze_for_npm.ts"
    },
    "build:gustwind-for-npm": {
      "cmd": "deno run -A build_gustwind_for_npm.ts"
    },
    "watch:build": {
      "cmd": "deno run --no-check --unstable ./cli.ts -b",
      "watch": true
    },
    "compileGustwindScripts": {
      "cmd": "deno run --unstable compileGustwindScripts.ts"
    }
  }
}
