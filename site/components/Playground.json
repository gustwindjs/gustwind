{
  "type": "div",
  "class": "flex gap-4",
  "attributes": {
    "x-state": "{ editor: JSON.stringify({ type: 'div', class: 'bg-red-200 p-4', children: 'demo' }, null, 2) }"
  },
  "children": [
    {
      "type": "div",
      "class": "w-1/2",
      "children": [
        {
          "type": "h2",
          "children": "Input"
        },
        {
          "type": "textarea",
          "class": "border",
          "attributes": {
            "rows": "10",
            "cols": "30",
            "oninput": "setState({ editor: this.value })",
            "x": "state.editor"
          }
        }
      ]
    },
    {
      "type": "div",
      "class": "w-1/2",
      "children": [
        {
          "type": "h2",
          "children": "Output"
        },
        {
          "type": "div",
          "attributes": {
            "x": "compile(state.editor)"
          }
        }
      ]
    }
  ]
}
