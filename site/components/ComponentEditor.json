{
  "type": "aside",
  "class": "fixed top-16 right-2 max-w-sm overflow-auto rounded filter drop-shadow",
  "attributes": {
    "x-state": "getSelectedComponent(editor)",
    "x-label": "selectedComponent"
  },
  "children": [
    {
      "type": "header",
      "class": "cursor-move",
      "children": [
        {
          "type": "h2",
          "class": "p-4 font-bold bg-gray-800 text-white",
          "children": "Component editor"
        }
      ]
    },
    {
      "type": "section",
      "class": "p-4 gap-4 flex flex-col bg-white filter bg-opacity-90",
      "children": [
        {
          "type": "div",
          "children": [
            {
              "type": "h2",
              "class": "font-bold",
              "children": "Content"
            },
            {
              "type": "ul",
              "class": "flex flex-col gap-2",
              "children": [
                {
                  "type": "li",
                  "class": "flex gap-2",
                  "children": [
                    {
                      "type": "label",
                      "children": "type"
                    },
                    {
                      "type": "input",
                      "class": "border flex-grow",
                      "attributes": {
                        "type": "text",
                        "x": "selectedComponent?.element || 'No selected element'",
                        "oninput": "elementChanged(this, this.value)"
                      }
                    }
                  ]
                },
                {
                  "type": "li",
                  "class": "flex gap-2",
                  "attributes": {
                    "x-attr": "",
                    "@class": "[typeof selectedComponent?.children !== 'string' && 'hidden']"
                  },
                  "children": [
                    {
                      "type": "label",
                      "children": "Content"
                    },
                    {
                      "type": "input",
                      "class": "border flex-grow",
                      "attributes": {
                        "type": "text",
                        "x": "typeof selectedComponent?.children === 'string' ? selectedComponent.children : ''",
                        "oninput": "contentChanged(this, this.value)"
                      }
                    }
                  ]
                },
                {
                  "type": "li",
                  "class": "flex gap-2",
                  "children": [
                    {
                      "type": "label",
                      "children": "Class"
                    },
                    {
                      "type": "input",
                      "class": "border flex-grow",
                      "attributes": {
                        "type": "text",
                        "x": "selectedComponent?.class || ''",
                        "oninput": "classChanged(this, this.value)"
                      }
                    }
                  ]
                },
                {
                  "visibleIf": "false",
                  "type": "div",
                  "attributes": {
                    "x": "JSON.stringify(selectedComponent, null, 2)"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
