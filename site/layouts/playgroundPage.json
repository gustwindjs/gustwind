{
  "element": "BaseLayout",
  "props": {
    "content": {
      "element": "div",
      "class": "md:mx-auto my-8 px-4 md:px-0 w-full lg:max-w-3xl prose lg:prose-xl",
      "children": [
        {
          "element": "div",
          "class": "flex flex-col gap-4",
          "children": [
            {
              "element": "div",
              "children": "In this playground, you can experiment with the JSON to HTML transform."
            },
            {
              "element": "div",
              "class": "flex gap-4",
              "attributes": {
                "x-state": "{ editor: JSON.stringify({ element: 'div', class: 'bg-red-200 p-4', children: 'demo' }, null, 2) }"
              },
              "children": [
                {
                  "element": "div",
                  "class": "w-1/2",
                  "children": [
                    {
                      "element": "h2",
                      "children": "Input"
                    },
                    {
                      "element": "textarea",
                      "class": "border",
                      "attributes": {
                        "rows": "10",
                        "cols": "30",
                        "oninput": "setState({ editor: this.value })",
                        "x": "state.editor"
                      }
                    }
                  ]
                },
                {
                  "element": "div",
                  "class": "w-1/2",
                  "children": [
                    {
                      "element": "h2",
                      "children": "Output"
                    },
                    {
                      "element": "div",
                      "attributes": {
                        "x": "compile(state.editor).then(t => t)"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  }
}
