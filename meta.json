{
  "port": 3000,
  "amountOfBuildThreads": 1,
  "meta": {
    "language": "en",
    "siteName": "Gustwind",
    "url": "https://gustwind.js.org/"
  },
  "outputDirectory": "./build",
  "renderer": {
    "path": "./renderers/breezewind/mod.ts",
    "options": {
      "componentsPath": "./site/components",
      "layoutsPath": "./site/layouts",
      "pageUtilitiesPath": "./site/pageUtilities.ts"
    }
  },
  "router": {
    "path": "./routers/breezewind/mod.ts",
    "options": {
      "dataSourcesPath": "./site/dataSources.ts",
      "routesPath": "./site/routes.json"
    }
  },
  "plugins": [
    {
      "path": "./plugins/asset/mod.ts",
      "options": {
        "assetsPath": "./assets"
      }
    },
    {
      "path": "./plugins/script/mod.ts",
      "options": {
        "scripts": [
          {
            "type": "text/javascript",
            "src": "https://unpkg.com/sidewind@7.6.0/dist/sidewind.umd.production.min.js"
          }
        ],
        "scriptsPath": ["./scripts", "./site/scripts"]
      }
    },
    {
      "path": "./plugins/twind/mod.ts",
      "options": { "setupPath": "./site/twindSetup.ts" }
    },
    {
      "path": "./plugins/editor/mod.ts"
    }
  ]
}
