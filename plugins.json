[
  {
    "path": "./plugins/breezewind-router/mod.ts",
    "options": {
      "dataSourcesPath": "./site/dataSources.ts",
      "routesPath": "./site/routes.json",
      "emitAllRoutes": true
    }
  },
  {
    "path": "./plugins/breezewind-renderer/mod.ts",
    "options": {
      "componentLoaders": [
        { "loader": "json", "path": "./site/components" },
        { "loader": "htm", "path": "./site/layouts" }
      ],
      "componentPaths": ["./site/layouts", "./site/components"],
      "metaPath": "./site/meta.json",
      "pageUtilitiesPath": "./site/pageUtilities.ts"
    }
  },
  {
    "path": "./plugins/copy/mod.ts",
    "options": {
      "inputPath": "./assets",
      "outputPath": "./assets"
    }
  },
  {
    "path": "./plugins/script/mod.ts",
    "options": {
      "scripts": [
        {
          "type": "text/javascript",
          "src": "https://unpkg.com/sidewind@${SIDEWIND_VERSION}/dist/sidewind.umd.production.min.js"
        }
      ],
      "scriptsPath": ["./site/scripts"]
    }
  },
  {
    "path": "./plugins/twind/mod.ts",
    "options": { "setupPath": "./site/twindSetup.ts" }
  },
  {
    "path": "./plugins/editor/mod.ts"
  }
]
