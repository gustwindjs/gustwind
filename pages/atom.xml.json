{
  "layout": "xml",
  "meta": {
    "title": "Gustwind",
    "description": "Gustwind blog"
  },
  "dataSources": [
    {
      "id": "blogPosts",
      "operation": "indexMarkdown",
      "input": "./blogPosts"
    }
  ],
  "page": [
    {
      "element": "rss",
      "attributes": {
        "version": "2.0"
      },
      "children": [
        {
          "element": "channel",
          "__bind": "blogPosts.content",
          "children": [
            {
              "element": "title",
              "__children": "context.title"
            },
            {
              "element": "description",
              "__children": "context.description"
            },
            {
              "element": "link",
              "__children": "https://gustwind.js.org/"
            },
            {
              "element": "lastBuildDate",
              "__children": "Mon, 06 Sep 2010 00:01:00 +0000 - TODO"
            },
            {
              "element": "item",
              "__children": [
                {
                  "element": "title",
                  "__children": "data.title"
                },
                {
                  "element": "description",
                  "__children": "data.description"
                },
                {
                  "element": "link",
                  "__children": "'https://gustwind.js.org/blog' + data.slug + '/'"
                },
                {
                  "element": "guid",
                  "__children": "data.id"
                },
                {
                  "element": "pubDate",
                  "__children": "data.date"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
