{
  "element": "div",
  "class": "fixed top-0 left-0 ml-4 mt-16 p-4 max-w-sm bg-white rounded filter drop-shadow bg-opacity-90 flex flex-col gap-4",
  "children": [
    {
      "element": "div",
      "children": [
        {
          "element": "h2",
          "class": "font-bold",
          "children": "Meta"
        },
        {
          "element": "dynamicList",
          "class": "flex flex-col gap-2",
          "__bind": {
            "dataSource": "meta",
            "oninput": "metaChanged(this.value, setState)"
          }
        }
      ]
    },
    {
      "element": "div",
      "children": [
        {
          "element": "h2",
          "class": "font-bold",
          "children": "Data sources"
        },
        {
          "element": "div",
          "children": [
            {
              "element": "template",
              "attributes": {
                "x-each": "dataSources"
              },
              "children": [
                {
                  "element": "dynamicList",
                  "class": "flex flex-col gap-2",
                  "__bind": {
                    "dataSource": "state"
                  }
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "element": "div",
      "children": [
        {
          "element": "h2",
          "class": "font-bold mb-2",
          "children": "Page"
        },
        {
          "element": "div",
          "attributes": {
            "x": "editorContainer.pageElements.length"
          }
        },
        {
          "element": "ul",
          "class": "flex flex-col gap-2",
          "children": [
            {
              "element": "template",
              "attributes": {
                "x-each": "pageElements"
              },
              "children": [
                {
                  "element": "li",
                  "attributes": {
                    "onmouseover": "elementHovered(this.state, setState)"
                  },
                  "children": [
                    {
                      "element": "label",
                      "attributes": {
                        "x": "state.element + ((typeof state.children === 'string') ? ' : ' + state.children : '')",
                        "x-class": "['border-l', 'border-gray-800', 'py-2', 'pl-2', 'ml-' + state.level * 2]"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}