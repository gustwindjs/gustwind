{
  "element": "div",
  "class": "fixed top-0 right-0 mr-4 mt-16 p-4 bg-white rounded filter drop-shadow bg-opacity-90 gap-8",
  "children": [
    {
      "element": "div",
      "children": [
        {
          "element": "h2",
          "class": "font-bold",
          "children": "Content"
        },
        {
          "element": "ul",
          "class": "flex flex-col gap-2",
          "children": [
            {
              "element": "li",
              "class": "flex gap-2",
              "children": [
                {
                  "element": "label",
                  "children": "Element"
                },
                {
                  "element": "input",
                  "class": "border flex-grow",
                  "attributes": {
                    "type": "text",
                    "x": "editorContainer.selected ? editorContainer.selected.element : 'No selected element'"
                  }
                }
              ]
            },
            {
              "element": "li",
              "class": "flex gap-2",
              "attributes": {
                "x-class": "[editorContainer.selected ? typeof editorContainer.selected.children !== 'string' && 'hidden' : 'hidden']"
              },
              "children": [
                {
                  "element": "label",
                  "children": "Content"
                },
                {
                  "element": "input",
                  "class": "border flex-grow",
                  "attributes": {
                    "type": "text",
                    "x": "editorContainer.selected ? editorContainer.selected.children : ''",
                    "oninput": "contentChanged(this.value, setState, this)"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]

}